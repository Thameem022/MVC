@model MVC_Training1.Models.StoreModels
@{
    ViewBag.Title = "view";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .image-size {
        max-width: 200px;
        max-height: 200px;
    }
</style>
<h2>@Model.Name</h2>
<h3>Image of selected Item:</h3>
@if (Model.Id == 1)
{
    <img class="image-size" src="~/Content/images/jar.png" />
}
@if (Model.Id == 2)
{
    <img class="image-size" src="~/Content/images/mug.png" />
}
@if (Model.Id == 3)
{
    <img class="image-size" src="~/Content/images/kite.png" />
}
<br/>
<h3>Price of @Model.Name is @Model.Price</h3>