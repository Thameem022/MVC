@model MVC_Training1.Models.Payment

@{
    ViewBag.Title = "AddCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .field-validation-error{
        color: red;
    }
    .input-validation-error {
        border: 2px solid red;
    }
</style>
<h2>AddCard</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Username)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ModeOfPayment)
        @Html.EnumDropDownListFor(model => model.ModeOfPayment, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ModeOfPayment)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CardNumber)
        @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CardNumber)

    </div>
    <button class="btn" type="submit" value="submit">Validate</button>
}